{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 2,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "complexity": {
                "useLiteralKeys": "off"
            },
            "correctness": {},
            "performance": {},
            "security": {},
            "style": {
                "noUnusedTemplateLiteral": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "files": {
        "ignore": [
            "dist"
        ]
    }
}